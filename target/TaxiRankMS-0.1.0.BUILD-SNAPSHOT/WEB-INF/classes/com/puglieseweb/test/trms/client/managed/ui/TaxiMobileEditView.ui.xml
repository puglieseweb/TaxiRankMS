<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  xmlns:r='urn:import:com.puglieseweb.test.trms.client.scaffold.ui'
  xmlns:a='urn:import:com.puglieseweb.test.trms.client.managed.ui'>
  <ui:style>
    .outer {
      padding: 10px;
    }
    .error {
      padding-left: 0.5em;
      background-color: red;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding-bottom: 10px;
    }
  </ui:style>
 
  <g:HTMLPanel id="boundElementHolder" styleName='{style.outer}'>
    <div ui:field='errors' class='{style.error}'></div>
    
    <div id='location'><div class='{style.label}'>Location</div><div class='{style.value}'><g:ValueListBox ui:field='location'/></div></div>
    <div id='status'><div class='{style.label}'>Status</div><div class='{style.value}'><g:ValueListBox ui:field='status'/></div></div>
    <div id='addOption'><div class='{style.label}'>Add Option</div><div class='{style.value}'><g:ValueListBox ui:field='addOption'/></div></div>

    <g:Button ui:field='save'>Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
